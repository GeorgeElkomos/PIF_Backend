{
  "info": {
    "_postman_id": "d5c3a09f-1c9b-4b7e-b97f-a8242e9f8369",
    "name": "My API",
    "description": "Authentication endpoints with auto token storage",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Company Registration",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"My Company\",\n  \"arabic_name\": \"شركتي\",\n  \"cr_number\": \"12345\",\n  \"moi_number\": \"67890\",\n  \"country_of_incorporation\": \"Saudi Arabia\",\n  \"username\": \"admin_user\",\n  \"email\": \"admin@example.com\",\n  \"password\": \"StrongPassword123!\",\n  \"password_confirm\": \"StrongPassword123!\",\n  \"first_name\": \"Admin\",\n  \"last_name\": \"User\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/register/",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "register", ""]
            }
          }
        },
        {
          "name": "User Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "let jsonData = pm.response.json();",
                  "if (jsonData.access) {",
                  "    pm.environment.set(\"access_token\", jsonData.access);",
                  "    console.log(\"Access token set: \" + jsonData.access);",
                  "}",
                  "if (jsonData.refresh) {",
                  "    pm.environment.set(\"refresh_token\", jsonData.refresh);",
                  "    console.log(\"Refresh token set: \" + jsonData.refresh);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username_or_email\": \"admin_user\",\n  \"password\": \"StrongPassword123!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login/",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login", ""]
            }
          }
        },
        {
          "name": "Token Refresh",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refresh\": \"{{refresh_token}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/token/refresh/",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "token", "refresh", ""]
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{access_token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refresh\": \"{{refresh_token}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/logout/",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "logout", ""]
            }
          }
        },
        {
          "name": "Change Password",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{access_token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username_or_email\": \"admin_user\",\n  \"old_password\": \"StrongPassword123!\",\n  \"new_password\": \"NewStrongPassword456!\",\n  \"new_password_confirm\": \"NewStrongPassword456!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/change-password/",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "change-password", ""]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    { "key": "base_url", "value": "http://localhost:8000" },
    { "key": "access_token", "value": "" },
    { "key": "refresh_token", "value": "" }
  ]
}
